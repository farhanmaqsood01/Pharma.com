@model PharmaDotCom.Models.Quote

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PharmaDotComLayout.cshtml";
}

<section class="page_breadcrumbs ds color parallax section_padding_top_75 section_padding_bottom_75">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h2>Feedback</h2>
                <ol class="breadcrumb highlightlinks">
                    <li>
                        <a asp-action="Create" asp-controller="Quote">
                            Quote
                        </a>
                    </li>

                    <li class="active">Feedback</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <form asp-action="Create">
            <div class="row">
                <div class="col-md-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input asp-for="CompanyName" class="form-control" placeholder="Company Name" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input asp-for="Address" class="form-control" placeholder="Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input asp-for="Country" class="form-control" placeholder="Country" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input asp-for="State" class="form-control" placeholder="State" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input asp-for="City" class="form-control" placeholder="City" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input asp-for="PostalCode" class="form-control" placeholder="Postal Code" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group">
                            <textarea asp-for="Comments" class="form-control" placeholder="Comments" rows="5"></textarea>
                            <span asp-validation-for="Comments" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="submit" value="Send" class="theme_button color2 inverse topmargin_1 bottommargin_1" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>






       

