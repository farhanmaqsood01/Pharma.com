    </div>
</section>
<h4 style="text-align: center;">Job Application Form</h4>
<hr />
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12">
                <h4>Personal Details</h4>
                </div>
            </div>
        <div class="row">
            <div class="col-md-3">


                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="FullName" class="form-control"placeholder="Full Name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input asp-for="PhoneNumber" class="form-control" aria-required="true" placeholder="Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input asp-for="EmailAddress" class="form-control" aria-required="true" placeholder="EmailAddress" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
            </div>


            <div class="col-md-3">
                <div class="form-group">
                    <input asp-for="CompanyName" class="form-control" aria-required="true" placeholder="Company Name" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <input asp-for="CurrentPost" class="form-control" aria-required="true" placeholder="Current Post" />
                    <span asp-validation-for="CurrentPost" class="text-danger"></span>
                </div>
            </div>


            <div class="col-md-3">
                <div class="form-group">
                    <input asp-for="JobField" class="form-control" aria-required="true" placeholder="Job Field" />
                    <span asp-validation-for="JobField" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input asp-for="Address" class="form-control" aria-required="true" placeholder="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input asp-for="Country" class="form-control" aria-required="true" placeholder="Country" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input asp-for="State" class="form-control" aria-required="true" placeholder="State" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input asp-for="City" class="form-control" aria-required="true" placeholder="City" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input asp-for="PostalCode" class="form-control" aria-required="true" placeholder="Postal Code" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4>Education Information</h4>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <input asp-for="Degree" class="form-control" aria-required="true" placeholder="Degree" />
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input asp-for="University" class="form-control" aria-required="true" placeholder="University" />
                    <span asp-validation-for="University" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input asp-for="College" class="form-control" aria-required="true" placeholder="College" />
                    <span asp-validation-for="College" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4>Resume</h4>
                </div>
            </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <input class="form-control" asp-for="Resume" placeholder="Choose File">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Apply Now" class="theme_button color2 inverse topmargin_1 bottommargin_1 ml-4" />
                    </div>
                </div>
            </div>
</form>
    </div>


