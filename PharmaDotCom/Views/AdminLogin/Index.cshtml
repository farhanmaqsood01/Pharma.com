@model PharmaDotCom.Models.AdminSignIn

@{ 
    Layout = "_SignInSignUpLayout";
}

<div class="form-wrapper">


    <!-- logo -->
    <div id="logo">
        <img class="logo" src="~/WebApp/Assets/images/logo.png" alt="image">

    </div>
    <!-- ./ logo -->

    <h5>Sign in</h5>

    <!-- form -->
    <form asp-action="Index">
        <div class="form-group">
            <input type="email" class="form-control" asp-for="Email" placeholder=" Enter Email">
            <br />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">

            <input type="password" class="form-control" asp-for="Password" placeholder="Enter Password">
            <br />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(signIn => signIn.RememberMe)
            </label>
        </div>
        <br />
        <div class="form-group clearfix">
            <button type="submit" class="btn btn-primary btn-pill float-right">LOGIN</button>
        </div>

        
    </form>
    <!-- ./ form -->


</div>